generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id String @id @default(uuid())

  email String @unique
  name  String

  responses Response[]
}

model Response {
  id String @id @default(uuid())

  question String
  response String

  user   User   @relation(fields: [userId], references: [id])
  userId String
}
